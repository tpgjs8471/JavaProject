package day18;

public class Menu {
	
	//메뉴와 가격을 나타내는 클래스 생성
	//멤버변수, 생성자, getter/setter, toString}
	
	private String name;
	private int price;
	
	public Menu(String name,int price) {
		this.name=name;
		this.price=price;
	}
	
	@Override
	public String toString() {
		return "메뉴: " + name + "| 가격: " + price;
	}
	public int getPrice() {
		return price;
	}
	public void setPrice(int price) {
		this.price = price;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
}
