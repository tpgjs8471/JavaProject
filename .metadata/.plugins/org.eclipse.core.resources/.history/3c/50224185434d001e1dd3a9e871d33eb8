package day16;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class List02		{

	public static void main(String[] args) {
		/* -----메뉴판-----
		 * 1.햄버거	7000원
		 * 2.피자		15000원
		 * 3.음료수	2000원
		 * 4.과자		1000원
		 * 5.사탕		500원
		 * 6.프로그램 종료
		 * 
		 * 메뉴를 선택하세요 > 1
		 * 수량 > 2
		 * => 1번 햄버거 2개 주문
		 * 주문을 끝내시려면 0을 눌러주세요.
		 * 메뉴선택 > 3
		 * 수량 > 2개
		 * => 3번 음료 2개 주문
		 * 주문을 끝내시려면 0을 눌러주세요.
		 * 
		 * --선택한 메뉴---
		 * 1. 햄버거 2개 
		 * 2. 음료 2개
		 * 총 지불금액 0000원
		 */
		Scanner scan=new Scanner(System.in);
		FoodManager fm=new FoodManager();
		fm.printMenu();
		fm.printPrice();
		int menu=0;
		do {
			System.out.println("=========메뉴판=========");
			System.out.println(fm.menu.get(0)+" "+fm.price.get(0)+"원");
			System.out.println(fm.menu.get(1)+" "+fm.price.get(1)+"원");
			System.out.println(fm.menu.get(2)+" "+fm.price.get(2)+"원");
			System.out.println(fm.menu.get(3)+" "+fm.price.get(3)+"원");
			System.out.println(fm.menu.get(4)+" "+fm.price.get(4)+"원");
			menu=scan.nextInt();
		}while(menu!=6);
	}

}
class FoodManager{
	//멤버변수 ArrayList 메뉴, ArrayList 가격
	//그외 필요한 멤버변수 알아서
	List<String> menu=new ArrayList<>();
	List<Integer> price=new ArrayList<>();
	int count;
	
	
	
	//메서드
	//출력 : 결과출력, 메뉴출력, add(), sale()
	
	public void printMenu() {
		menu.add("햄버거");
		menu.add("피자");
		menu.add("치킨");
		menu.add("음료수");
		menu.add("과자");
	}
	public void printPrice() {
		price.add(7000);
		price.add(15000);
		price.add(20000);
		price.add(2000);
		price.add(1000);
	}
	
	public void result(String menu,int count,int price) {
		System.out.println(menu+" "+count+"개"+" "+(price*count)+"원");
	}
	
	public List<String> getMenu() {
		return menu;
	}
	public void setMenu(List<String> menu) {
		this.menu = menu;
	}
	public List<Integer> getPrice() {
		return price;
	}
	public void setPrice(List<Integer> price) {
		this.price = price;
	}
	public int getCount() {
		return count;
	}
	public void setCount(int count) {
		this.count = count;
	}
}